{
  "kind": "collectionType",
  "collectionName": "carts",
  "info": {
    "singularName": "cart",
    "pluralName": "carts",
    "displayName": "Cart",
    "description": "Panier d'achat des utilisateurs"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "sessionId": {
      "type": "string",
      "unique": true
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::cart-item.cart-item",
      "mappedBy": "cart"
    },
    "total": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "abandoned",
        "converted"
      ],
      "default": "active"
    },
    "lastActivity": {
      "type": "datetime"
    }
  }
}
