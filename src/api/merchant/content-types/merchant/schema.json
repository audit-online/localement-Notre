{
  "kind": "collectionType",
  "collectionName": "merchants",
  "info": {
    "singularName": "merchant",
    "pluralName": "merchants",
    "displayName": "Merchant",
    "description": "Commer√ßants et artisans locaux"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "richtext"
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phone": {
      "type": "string"
    },
    "address": {
      "type": "text"
    },
    "city": {
      "type": "string",
      "required": true
    },
    "postalCode": {
      "type": "string"
    },
    "businessType": {
      "type": "enumeration",
      "enum": ["commerce", "artisanat", "service", "restauration"],
      "default": "commerce"
    },
    "openingHours": {
      "type": "json"
    },
    "website": {
      "type": "string"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5,
      "default": 0
    },
    "products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "merchant"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "merchant"
    },
    "templates": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::template.template",
      "inversedBy": "merchants"
    },
    "subscription": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::subscription.subscription",
      "inversedBy": "merchant"
    },
    "invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice.invoice",
      "mappedBy": "merchant"
    },
    "supportTickets": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::support-ticket.support-ticket",
      "mappedBy": "merchant"
    },
    "backend": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::merchant-backend.merchant-backend",
      "inversedBy": "merchant"
    },
    "joinedAt": {
      "type": "datetime"
    },
    "lastLoginAt": {
      "type": "datetime"
    },
    "stripeCustomerId": {
      "type": "string",
      "unique": true
    }
  }
}
