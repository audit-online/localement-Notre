{
  "kind": "collectionType",
  "collectionName": "contacts",
  "info": {
    "singularName": "contact",
    "pluralName": "contacts",
    "displayName": "Contact",
    "description": "Formulaires de contact des clients"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "subject": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "general",
        "support",
        "complaint",
        "suggestion",
        "merchant_inquiry",
        "partnership"
      ],
      "default": "general"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "new",
        "in_progress",
        "resolved",
        "closed"
      ],
      "default": "new"
    },
    "merchant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::merchant.merchant"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "response": {
      "type": "text"
    },
    "responseDate": {
      "type": "datetime"
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "low",
        "medium",
        "high",
        "urgent"
      ],
      "default": "medium"
    }
  }
}
