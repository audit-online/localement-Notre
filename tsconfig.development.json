{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "types/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.log",
    "build",
    ".cache",
    "tmp",
    ".tmp"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "excludeDirectories": ["**/node_modules", "**/dist", "**/build", "**/.cache"]
  }
}
